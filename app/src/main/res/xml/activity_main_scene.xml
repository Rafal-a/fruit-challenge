<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/text_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="640dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.324"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/text_green_apple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allan_bold"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/lottie_animation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.71" />

        <Constraint
            android:id="@+id/button_advice"
            android:layout_width="209dp"
            android:layout_height="46dp"
            android:elevation="10dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lottie_animation"
            app:layout_constraintVertical_bias="0.198">
            <CustomAttribute app:attributeName="backgroundColor"
                app:customColorDrawableValue="@color/white"/>
        </Constraint>

        <Constraint
            android:id="@+id/button_recipes"
            android:layout_width="215dp"
            android:layout_height="46dp"
            android:elevation="10dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_advice"
            app:layout_constraintVertical_bias="0.137"/>

        <Constraint
            android:id="@+id/button_exercise"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:background="@drawable/button_shape"
            android:elevation="10dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_recipes"
            app:layout_constraintVertical_bias="0.096"
             />
    </ConstraintSet>



    <ConstraintSet android:id="@+id/end">
      <Constraint
          android:id="@+id/text_team"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="640dp"
          android:visibility="visible"
          android:clickable="true"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.324"
          app:layout_constraintStart_toStartOf="parent">

      </Constraint>

      <Constraint
          android:id="@+id/text_green_apple"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/allan_bold"
          android:visibility="visible"
          android:textColor="@color/white"
          android:clickable="true"
          app:layout_constraintBottom_toTopOf="@+id/lottie_animation"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.497"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.71" />

      <Constraint
          android:id="@+id/button_advice"
          android:layout_width="209dp"
          android:layout_height="46dp"
          android:elevation="30dp"
          android:visibility="visible"
          android:clickable="true"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/lottie_animation"
          app:layout_constraintVertical_bias="0.198"
          android:background="@drawable/button_clicked_shape"/>



      <Constraint
          android:id="@+id/button_recipes"
          android:layout_width="215dp"
          android:layout_height="46dp"
          android:background="@drawable/button_shape"
          android:elevation="30dp"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/button_advice"
          app:layout_constraintVertical_bias="0.137"/>





      <Constraint
          android:id="@+id/button_exercise"
          android:layout_width="210dp"
          android:layout_height="45dp"
          android:background="@drawable/button_shape"
          android:elevation="30dp"
          android:visibility="visible"
          android:textColor="@color/white"
          android:clickable="true"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.502"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/button_recipes"
          app:layout_constraintVertical_bias="0.096"
          android:layout_marginTop="13dp"/>
  </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000"
        app:autoTransition="none">
        <OnClick app:targetId="@+id/lottie_animation"/>
    </Transition>
</MotionScene>
